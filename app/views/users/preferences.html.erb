<div style="margin-top: 30px" id="tabs">
    <ul>
        <li><a href="#fragment-1"><span>General</span></a></li>
        <li><a href="#fragment-2"><span>Twitter Users</span></a></li>
    </ul>
    <div id="fragment-1">
        <p><%= check_box :id => "visual_notify", :value =>  @user.visual_notify, :label => "visual notify" %></p>
        <p><%= check_box :id => "audio_notify", :value =>  @user.audio_notify, :label => "audio notify" %></p>
        <p><%= text_field :tweet_query_pct, :id => "tweet_query_pct", :value =>  @user.tweet_query_pct, :label => "Percent of time allocated to tweet queries max(100)" %></p>
        <p><%= text_field :tweets_displayed, :id => "tweets_displayed", :value =>  @user.tweets_displayed, :label => "Number of tweets displayed" %></p>
        <p><%= button "Save General Settings", :id => "save_group" %></p>
    </div>
    <div id="fragment-2">
       <div id='twitter_users'>
		   <p><a href="#" id="dialog_link" class="ui-state-default ui-corner-all">Add Twitter User</a></p>
         <p style="color: red">Your current twitter users.</p>
        <%  @twits.each do |twit| %>
			<p><%= twit.twitter_name %></p>
        <% end %>
       </div>
    </div>
</div>

<div id="dialog" title="Add Twitter User">
  <div class="auth_formRow">
  <%= text_field :twittername, :id => "twitter_user",:label => "Username" %><br />
  </div>
  <div class="auth_formRow">
  <%= password_field :twitterpassword, :id => "twitter_password", :label => "Password" %><br />
  </div>  
  <div class="auth_formRow">
  <%= password_field :twitterpassword_confirmation, :id => "twitter_password_confirmation", :label => "Password Confirmation" %><br />
  </div>
</div>
<div>
		   <p><a href="/" id="dialog_link" class="ui-state-default ui-corner-all">Exit Preferences</a></p>
</p>
