<div id="tabs" style="margin-top: 30px">
    <ul>
        <% count = 1 %>
        <% @twits.each do |twit| %> 
        <li><a href="#fragment_<%= count %>"><span><%= twit.twitter_name %></span></a></li>
        <% count += 1 %>
        <% end %>
        <li><a href="#fragment_<%= count %>"><span>Searches</span></a></li>
    </ul>
		  <%count = 1 %>  
        <% @twits.each do |twit| %>
        <div id="fragment_<%= count %>">
          <div style="width: 100%;">
		     <p><a href="#" id="dialog_link_group_add_<%= twit.id %>" class="ui-state-default ui-corner-all">Add Group</a></p>
			</div>
          <% twit.groups.each do |group| %>
           <div id="<% group.group_name %>" class="group_display">              
            <p class="group_name"><%= group.group_name %></p>
               <table>
               <% group.readable_tweets(twit).each do |tweet| %>
					<tr><td><img src="<%= tweet.first %>"/></td><td><%= tweet[1] %></td></tr>
               <% end %>
               </table>
			  </div>
          <% end %>
       <br clear="left"/>
        </div> <!-- div for fragment-->
        <% count += 1 %>
       <% end %>
       <div id="fragment_<%= count %>">
         <div style="width: 100%;">
		     <p><a href="#" id="dialog_link_search_add" class="ui-state-default ui-corner-all">Add Search</a></p>
         </div>
         <% @searches.each do |search| %>
           <div id="<%= search.search_name %>" class="group_display">              
            <p class="group_name"><%= search.search_name %></p>
               <table>
               <% search.readable_tweets.each do |tweet| %>
					   <tr><td><img src="<%= tweet.first %>"/></td><td><%= tweet[1] %></td></tr>
               <% end %>
              </table>
         <% end %>
       </div>  <!--serarch fragment div -->
		<br clear="left"/>
    </div>
</div>

